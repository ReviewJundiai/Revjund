// Geração de estrelas conforme a avaliação
document.querySelectorAll('.estrelas').forEach(div => {
  const nota = parseFloat(div.getAttribute('data-avaliacao'));
  const estrelasCheias = Math.floor(nota);
  const meia = nota % 1 >= 0.5;
  let html = '';

  for (let i = 0; i < estrelasCheias; i++) html += '⭐';
  if (meia) html += '✨';
  div.innerHTML = html;
});

function avaliar(nomeEmpresa) {
  const comentario = prompt(`Digite seu comentário sobre ${nomeEmpresa}:`);
  const nota = parseFloat(prompt("Dê uma nota de 1 a 5:"));
  if (comentario && nota >= 1 && nota <= 5) {
    alert(`Obrigado por avaliar ${nomeEmpresa} com ${nota} estrelas!\nSeu comentário: "${comentario}"`);
  } else {
    alert("Avaliação cancelada ou inválida.");
  }
}
